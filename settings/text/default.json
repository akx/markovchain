{
    "storage": {
        "state_separator": " "
    },
    "markov": {
        "parser": {
            "__class__": "Parser",
            "state_sizes": [ 1 ],
            "reset_on_sentence_end": true
        },
        "scanner": {
            "__class__": "RegExpScanner",
            "expr": "(?:(?P<end>[.!?]+)|(?P<word>(?:[^\\w\\s]+|\\w+)))",
            "default_end": "."
        },
        "formatter": {
            "__class__": "Formatter",
            "case": "title",
            "end_chars": ".?!",
            "default_end": ".",
            "replace": [
                ["\\s+", " "],
                ["\\s*([^\\w\\s]+)\\s*", "\\1"],
                ["([,.?!])(\\w)", "\\1 \\2"],
                ["([\\w,.?!])([[({<])", "\\1 \\2"],
                ["([])}>])(\\w)", "\\1 \\2"],
                ["(\\w)([-+*]+)(\\w)", "\\1 \\2 \\3"]
            ]
        }
    }
}
